{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "globals": {"Atomics": "readonly",
              "SharedArrayBuffer": "readonly"},
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {"jsx": true}
  },
  "extends": ["plugin:react/recommended", "airbnb"],
  "plugins": ["react"],
  "rules": {
    "no-shadow": "off",
    "no-param-reassign": "off",
    "eol-last": "off",
    "arrow-parens": "off"
  }
}

